thief = t

while(true) {
    t = getch();
    if(t == 'w') {
        r_dir = -1;  c_dir = 0;
    }
    else if(t == 'e') {
        r_dir = -1;   c_dir = 0;
    }
    else if(t == 'r') {
        r_dir = -1;   c_dir = 0;
    }
    else if(t == 'd') {
        r_dir = -1;   c_dir = 0;
    } 
    else if(r_dir = 'q')
        break;
    }
